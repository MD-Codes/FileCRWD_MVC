@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div>
    <h2>Create File</h2>
    <form asp-action="CreateFile" method="post">
        <div>
            <label for="FileName">Enter File Name:</label>
            <input type="text" id="FileName" name="FileName" required />
            <button type="submit">Create File</button>
        </div>
    </form>
</div>
<hr />
<span>
    <ol >
    @foreach (var text in ViewBag.Data)
    {
        <li>
                <p>@text.Name</p> 
                <a asp-route-id="@text.Name" asp-controller="Home" asp-action="DeleteFile">Delete</a>
                <a asp-route-id="@text.Name" asp-controller="Home" asp-action="OpenFile">Open</a>

        </li>
    }
    </ol>
</span>
